extends layout

block externalJs
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js' type='text/javascript')
    //- hack? to be able to use variable in external js
    script(type='text/javascript').
        console.log(!{JSON.stringify(locals.match)})
        var match = !{JSON.stringify(locals.match)};
    script(src='/assets/js/lolTimelineStepper.js' type='text/javascript')

block pageTitle
    | Match Information

block content
    #match-summary-container
        #blue-team-summary
            .team-summary-header
                if locals.match.team1.winner
                    | VICTORY
                else
                    | DEFEAT
        #red-team-summary
            .team-summary-header
                if locals.match.team2.winner
                    | VICTORY
                else
                    | DEFEAT
        #champion-info-summary
            #blue-team.team-container
                each champion in locals.match.team1.participants
                    a(href='#')
                        .champion-container
                            .champion-ss-container
                                img(class='match-champ-img', src='/assets/img/Placeholder.jpg', width='64', height='64')
                                .vertical-summoner-spells
                                    img(class='summoner-spell1-img', src='/assets/img/Placeholder.jpg', width='32', height='32')
                                    img(class='summoner-spell2-img', src='/assets/img/Placeholder.jpg', width='32', height='32')
                            .match-sn-kda-container
                                .match-sn
                                    | placeholder
                                .match-kda
                                    span.blue-text
                                        | #{champion.stats.kills}
                                    | &nbsp;/&nbsp;
                                    span.red-text
