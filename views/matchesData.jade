.matches-container
    each match in locals.matchHistory
        a(href='/match?matchId=#{match.matchId}')
            .match-container
                if match.stats.win
                    .victory-sidebar
                else
                    .defeat-sidebar
                .player-team-container
                    .player-team-imgs
                        .player-imgs
                            img(class='player-champ-img champ64-#{match.championId}', src='/assets/img/t1.png', width='64', height='64')
                            .vertical-summoner-spells
                                img(class='summoner-spell1-img ss-#{match.spell1Id}', src='/assets/img/t1.png', width='32', height='32')
                                img(class='summoner-spell2-img ss-#{match.spell2Id}', src='/assets/img/t1.png', width='32', height='32')
                        each teamChamp in match.otherPlayers.playerTeam
                            img(class='nonplayer-champ-img champ48-#{teamChamp}', src='/assets/img/t1.png', width='48', height='48')
                    .player-stats-container
                        .mh-kda
                            span.blue-text
                                | #{match.stats.kills}
                            | &nbsp;/&nbsp;
                            span.red-text
                                | #{match.stats.deaths}
                            | &nbsp;/&nbsp;
                            span.blue-text
                                | #{match.stats.assists}
                        .mh-duration
                            | #{match.matchDuration}
                        .mh-creation
                            | #{match.matchCreation}
                .enemy-team-container
                    each enemyChamp in match.otherPlayers.enemyTeam
                        img(class='nonplayer-champ-img champ48-#{enemyChamp}', src='/assets/img/t1.png', width='48', height='48')